    <st:include page="config.jelly" class="net.praqma.hudson.scm.pollingmode.PollingMode"></st:include>
    <f:entry field="component" title="Component">
        <f:textbox/>
    </f:entry>
    <f:entry title="Exclude components" description="Newline delimited list of components to exclude when polling, expand the box by clicking the arrow on the right side of the text box.">
        <f:expandableTextbox field="excludeList">
        </f:expandableTextbox>
    </f:entry>

    <f:entry field="createBaseline">
        <f:checkbox title="Create baseline"/>
    </f:entry>
</j:jelly>
